<!-- 添加一个输入框供用户输入区域名称 -->
<div class="form-group">
    <label for="area-name">Area name:</label>
    <input type="text" class="form-control" id="area-name" placeholder="Enter area name">
</div>


document.getElementById('area-name').addEventListener('input', function () {
    var areaName = this.value;
    if (areaName) {
        var geocoder = new L.Control.Geocoder.Nominatim();
        geocoder.geocode(areaName, function(results) {
            if (results && results.length > 0) {
                var bbox = results[0].bbox;
                var bounds = L.latLngBounds(L.latLng(bbox[0], bbox[2]), L.latLng(bbox[1], bbox[3]));
                map.fitBounds(bounds);
            }
        });
    }
});
